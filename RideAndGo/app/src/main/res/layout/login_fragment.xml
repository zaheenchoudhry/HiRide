<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/login_back_arrow"
        android:layout_width="20dp"
        android:layout_height="18dp"
        android:layout_marginTop="45dp"
        android:layout_marginStart="25dp"
        android:src="@drawable/arrow_back_black"/>

    <TextView
        android:id="@+id/login_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#303030"
        android:text="Log In"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <LinearLayout
        android:id="@+id/login_inputs_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:id="@+id/login_email_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/login_email_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:background="@drawable/login_signup_edittext_border"
                android:textColor="#303030"
                android:textColorHint="#c0c0c0"
                android:hint="Email Address"/>

            <ImageView
                android:id="@+id/login_email_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/email_icon"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/login_password_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/login_password_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:background="@drawable/login_signup_edittext_border"
                android:textColor="#303030"
                android:textColorHint="#c0c0c0"
                android:hint="Password"/>

            <ImageView
                android:id="@+id/login_password_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/password_icon"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/login_forgot_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#22409A"
        android:text="Forgot Password?"/>

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#22409A"
        android:text="Log In"
        android:textColor="#ffffff"/>

    <RelativeLayout
        android:id="@+id/login_buttons_divider_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/login_buttons_divider_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/line_medium_gray"/>
        
        <TextView
            android:id="@+id/login_buttons_divider_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="or"/>

        <ImageView
            android:id="@+id/login_buttons_divider_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/line_medium_gray"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/facebook_login_button_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/facebook_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#4267b2"
            android:text=""/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/facebook_login_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/facebook_icon_white"/>

            <TextView
                android:id="@+id/facebook_login_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#ffffff"
                android:text="Continue With Facebook"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>