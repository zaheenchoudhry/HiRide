<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:background="#f6364d"
            app:contentScrim="?attr/colorPrimaryDark"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleTextAppearance="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <ImageView
                android:id="@+id/backdrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/image12"
                app:layout_collapseMode="parallax" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/title_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/create_icon"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="0dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/create_icon_white" />

                    <TextView
                        android:id="@+id/create_ride_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                </LinearLayout>
            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="top"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/menu_button"
                        android:layout_width="25dp"
                        android:layout_height="22dp"
                        android:src="@drawable/menu_icon_white_2"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="-12dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/main.textview.title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:text="Create a Ride"
                            android:textSize="17sp" />
                    </LinearLayout>
                </RelativeLayout>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_gravity="fill_vertical"
        android:paddingBottom="85dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f1f5f8"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingRight="10dp"
            android:paddingBottom="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">

                <EditText
                    android:id="@+id/edittext_pickup"
                    android:layout_centerHorizontal="true"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:paddingStart="42dp"
                    android:background="@drawable/edittext_border"
                    android:inputType="text"
                    android:hint="Pick-up Location"
                    android:maxLines="1"
                    android:textCursorDrawable="@drawable/edittext_cursor"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:clickable="true"/>

                <ImageView
                    android:padding="3dp"
                    android:src="@drawable/location_icon"
                    android:layout_marginTop="38dp"
                    android:layout_marginStart="-296dp"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_toEndOf="@id/edittext_pickup"/>

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:background="#eaeaea"
                    android:layout_toEndOf="@id/edittext_pickup"
                    android:layout_marginStart="-50dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/add_icon_darkgrey"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <EditText
                    android:id="@+id/edittext_dropoff"
                    android:layout_centerHorizontal="true"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="95dp"
                    android:layout_marginBottom="30dp"
                    android:paddingStart="42dp"
                    android:background="@drawable/edittext_border"
                    android:inputType="text"
                    android:hint="Drop-off Location"
                    android:maxLines="1"
                    android:textCursorDrawable="@drawable/edittext_cursor"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:clickable="true"/>

                <ImageView
                    android:padding="3dp"
                    android:src="@drawable/location_icon"
                    android:layout_marginTop="103dp"
                    android:layout_marginStart="-296dp"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_toEndOf="@id/edittext_dropoff"/>

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="95dp"
                    android:background="#1777CD"
                    android:layout_toEndOf="@id/edittext_dropoff"
                    android:layout_marginStart="-50dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/add_icon_white"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>
                
                <RelativeLayout
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_centerHorizontal="true"
                    android:visibility="invisible">

                    <fragment
                        android:id="@+id/place_autocomplete_fragment_pickup"
                        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="95dp"
                    android:layout_centerHorizontal="true"
                    android:visibility="invisible">

                    <fragment
                        android:id="@+id/place_autocomplete_fragment_dropoff"
                        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:layout_marginTop="5dp">

                <RelativeLayout
                    android:id="@+id/centerMarkDateTime"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true" />

                <RelativeLayout
                    android:id="@+id/date_container"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@id/centerMarkDateTime"
                    android:layout_marginStart="-300dp"
                    android:background="#ffffff">

                    <RelativeLayout
                        android:id="@+id/centerMarkDate"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#808080"
                        android:layout_toEndOf="@id/centerMarkDate"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="42dp"
                        android:text="Date"
                        android:textSize="20sp" />

                    <RelativeLayout
                        android:id="@+id/date_underline"
                        android:layout_width="22dp"
                        android:layout_height="3dp"
                        android:background="#1777CD"
                        android:layout_toEndOf="@id/centerMarkDate"
                        android:layout_marginStart="52dp"
                        android:layout_marginTop="44dp"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/date_underline"
                        android:layout_marginTop="60dp"
                        android:layout_marginStart="-28dp">

                        <TextView
                            android:id="@+id/date_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textColor="#808080"
                            android:layout_marginTop="0dp"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/date_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textColor="#808080"
                            android:layout_marginTop="14dp"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/date_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textColor="#808080"
                            android:layout_marginTop="50dp"
                            android:textSize="12sp" />
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/time_container"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/centerMarkDateTime"
                    android:layout_marginEnd="300dp"
                    android:background="#ffffff">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#808080"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="60dp"
                        android:text="Time"
                        android:textSize="20sp" />

                    <RelativeLayout
                        android:id="@+id/time_underline"
                        android:layout_width="22dp"
                        android:layout_height="3dp"
                        android:background="#DCB975"
                        android:layout_marginStart="72dp"
                        android:layout_marginTop="44dp"/>

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#808080"
                        android:layout_marginTop="80dp"
                        android:textSize="22sp"
                        android:layout_marginStart="40dp"/>

                    <TextView
                        android:id="@+id/time_am_pm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#808080"
                        android:layout_marginTop="82dp"
                        android:textSize="20sp"
                        android:layout_toEndOf="@id/time"
                        android:layout_marginStart="5dp"/>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:layout_marginTop="5dp">

                <RelativeLayout
                    android:id="@+id/centerMarkSeatPrice"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true" />

                <RelativeLayout
                    android:id="@+id/seat_container"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@id/centerMarkSeatPrice"
                    android:layout_marginStart="-300dp"
                    android:background="#ffffff">

                    <RelativeLayout
                        android:id="@+id/centerMarkSeat"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_centerHorizontal="true"
                        android:focusableInTouchMode="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#808080"
                        android:layout_toEndOf="@id/centerMarkSeat"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="38dp"
                        android:text="Seats"
                        android:textSize="20sp" />

                    <RelativeLayout
                        android:id="@+id/seat_underline"
                        android:layout_width="22dp"
                        android:layout_height="3dp"
                        android:background="#DCB975"
                        android:layout_toEndOf="@id/centerMarkSeat"
                        android:layout_marginStart="52dp"
                        android:layout_marginTop="44dp"/>

                    <TextView
                        android:id="@+id/seats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#808080"
                        android:layout_marginTop="80dp"
                        android:textSize="28sp"
                        android:layout_toEndOf="@id/seat_underline"
                        android:layout_marginStart="-18dp" />

                    <ImageView
                        android:id="@+id/add_seats"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/add_icon_lightgrey"
                        android:layout_marginTop="85dp"
                        android:layout_toEndOf="@id/seat_underline"
                        android:layout_marginStart="25dp" />

                    <ImageView
                        android:id="@+id/subtract_seats"
                        android:layout_width="25dp"
                        android:layout_height="30dp"
                        android:src="@drawable/subtract_icon_lightgrey"
                        android:layout_marginTop="85dp"
                        android:layout_toEndOf="@id/seat_underline"
                        android:layout_marginStart="-70dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/price_container"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/centerMarkSeatPrice"
                    android:layout_marginEnd="300dp"
                    android:background="#ffffff">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#808080"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="60dp"
                        android:text="Price"
                        android:textSize="20sp" />

                    <RelativeLayout
                        android:id="@+id/price_underline"
                        android:layout_width="22dp"
                        android:layout_height="3dp"
                        android:background="#c0c0c0"
                        android:layout_marginStart="72dp"
                        android:layout_marginTop="44dp"/>

                    <EditText
                        android:id="@+id/price_edittext"
                        android:layout_width="66dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="70dp"
                        android:layout_marginStart="60dp"
                        android:paddingTop="5dp"
                        android:inputType="numberDecimal"
                        android:hint="Price"
                        android:gravity="center"
                        android:background="@null"
                        android:maxLines="1"
                        android:textCursorDrawable="@drawable/edittext_cursor"
                        android:textColor="#808080"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#808080"
                        android:layout_marginTop="79dp"
                        android:textSize="20sp"
                        android:layout_marginStart="40dp"
                        android:text="$" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#a0a0a0"
                        android:layout_marginTop="130dp"
                        android:textSize="12sp"
                        android:layout_marginStart="65dp"
                        android:text="Per Seat" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/create_ride_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:background="#444A5A">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Create"
                    android:textSize="15sp" />

            </RelativeLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>